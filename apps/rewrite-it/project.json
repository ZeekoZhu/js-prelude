{
  "name": "rewrite-it",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rewrite-it/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/rewrite-it"
      },
      "inputs": [
        "default",
        { "dependentTasksOutputFiles": "**/*.mjs" },
        {
          "env": "VITE_AI_ENDPOINT"
        },
        {
          "env": "VITE_AI_API_KEY"
        },
        {
          "env": "VITE_AI_MODEL"
        }
      ],
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "watch": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/rewrite-it",
        "mode": "development",
        "watch": true
      }
    },
    "serve": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "rewrite-it:build",
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "rewrite-it:build:development"
        },
        "production": {
          "buildTarget": "rewrite-it:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/rewrite-it"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
