{
  "name": "retro-identicon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/retro-identicon/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/retro-identicon",
        "main": "packages/retro-identicon/src/index.ts",
        "tsConfig": "packages/retro-identicon/tsconfig.lib.json",
        "assets": ["packages/retro-identicon/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs retro-identicon {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/retro-identicon/**/*.ts",
          "packages/retro-identicon/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/retro-identicon"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/retro-identicon"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/retro-identicon",
        "command": "vitepress dev docs"
      }
    }
  },
  "tags": []
}
