{
  "name": "fun-ioc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/fun-ioc/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/fun-ioc",
        "main": "packages/fun-ioc/src/index.ts",
        "tsConfig": "packages/fun-ioc/tsconfig.lib.json",
        "assets": ["packages/fun-ioc/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs fun-ioc {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/fun-ioc/**/*.ts",
          "packages/fun-ioc/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/fun-ioc"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/fun-ioc"
      }
    }
  },
  "tags": []
}
